<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/ic_login_bg"
                android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:src="@mipmap/ic_qx_left"/>

    <com.utouu.android.commons.view.RoundImageView
        android:id="@+id/user_head_imageView"
        android:layout_width="79.1dp"
        android:layout_height="79.1dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_margin_70"
        android:scaleType="fitCenter"
        android:src="@mipmap/head_default"/>

    <!--<TextView-->
    <!--android:id="@+id/tv_info"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="@dimen/base_button_131"-->
    <!--android:text="@string/commons_tips_utouu"-->
    <!--android:textColor="@color/commons_text_normal"-->
    <!--android:textSize="@dimen/base_textsize_14"/>-->

    <LinearLayout
        android:id="@+id/temp_linearLayout1"
        android:layout_width="@dimen/base_button_260"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/base_button_160"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/base_margin_10"
            android:orientation="horizontal">
            <!--android:background="@drawable/edit_corners"-->
            <AutoCompleteTextView
                android:id="@+id/mobile_autocCompleteTextView"
                style="@style/commons_editTextStyle3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_item_height"
                android:drawableLeft="@mipmap/ic_account"
                android:hint="@string/commons_account_hint1"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/commons_button_textColor"
                android:textColorHint="@color/commons_text_normal"
                android:textCursorDrawable="@drawable/cursor_color"/>

            <ImageView
                android:id="@+id/mobile_clear_imageView"
                android:layout_width="@dimen/base_item_height"
                android:layout_height="@dimen/base_item_height"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/ic_delete"
                android:visibility="gone"/>

            <!--  <ImageView
                  android:id="@+id/show_accounts_imageView"
                  android:layout_width="@dimen/base_item_height"
                  android:layout_height="@dimen/base_item_height"
                  android:layout_gravity="center_vertical"
                  android:scaleType="center"
                  android:src="@mipmap/bt_delete"/>-->
        </LinearLayout>

        <com.utouu.android.commons.view.FillListView
            android:id="@+id/mobile_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:cacheColorHint="@android:color/transparent"
            android:listSelector="@android:color/transparent"
            android:paddingLeft="@dimen/base_margin_42"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <!--android:background="@drawable/edit_corners"-->
            <EditText
                android:id="@+id/password_editText"
                style="@style/commons_editTextStyle3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/base_item_height"
                android:drawableLeft="@mipmap/ic_password"
                android:hint="@string/commons_password_hint1"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@color/commons_button_textColor"
                android:textColorHint="@color/commons_text_normal"
                android:textCursorDrawable="@drawable/cursor_color"/>

            <ImageView
                android:id="@+id/show_password_imageView"
                android:layout_width="@dimen/base_item_height"
                android:layout_height="@dimen/base_item_height"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/eye_default"/>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="@dimen/base_button_260"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/base_margin_15"
        android:layout_marginRight="@dimen/base_margin_15"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/register_textView"
            style="@style/commons_textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_gravity="center_vertical"
            android:paddingBottom="@dimen/base_item_margin"
            android:paddingTop="@dimen/base_item_margin"
            android:text="@string/commons_register_fast"/>

        <TextView
            android:id="@+id/retrieve_textView"
            style="@style/commons_textStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:paddingBottom="@dimen/base_item_margin"
            android:paddingTop="@dimen/base_item_margin"
            android:text="@string/commons_password_retrieve"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/temp_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/qq_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_margin_14"
            android:layout_marginRight="@dimen/base_margin_14"
            android:src="@drawable/qq_selector"/>

        <ImageView
            android:id="@+id/weixin_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/base_margin_14"
            android:layout_marginRight="@dimen/base_margin_14"
            android:src="@drawable/weixin_selector"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/temp_frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:visibility="visible"
        android:layout_above="@+id/temp_linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0.5dp"-->
        <!--android:layout_gravity="center"-->
        <!--android:background="@drawable/divider_line_height"/>-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/base_margin_14"
            android:paddingRight="@dimen/base_margin_14"
            android:text="第三方账号登录"
            android:textColor="@color/commons_button_textColor"
            android:textSize="@dimen/base_textsize_12"/>

    </FrameLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="@dimen/base_button_260"
        android:layout_height="@dimen/base_button_height"
        android:background="@drawable/btn_bg"
        android:text="@string/commons_login"
        android:textColor="@color/commons_button_textColor"
        android:textSize="16sp"
        android:layout_below="@+id/temp_linearLayout1"
        android:layout_alignLeft="@+id/relativeLayout"
        android:layout_alignStart="@+id/relativeLayout" />
</RelativeLayout>
