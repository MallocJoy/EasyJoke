<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/white_round"
              android:orientation="vertical">

    <TextView
        android:id="@+id/title_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_item_margin"
        android:gravity="center"
        android:text="@string/commons_prompt2"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/content_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_item_margin"
        android:autoLink="web"
        android:gravity="center"
        android:text="@string/commons_register_agreement3"/>

    <Button
        android:id="@+id/ok_button"
        style="@style/commons_buttonStyle1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_button_height"
        android:layout_marginBottom="@dimen/base_item_margin"
        android:layout_marginLeft="@dimen/base_item_margin"
        android:layout_marginRight="@dimen/base_item_margin"
        android:background="@drawable/button_selector1"
        android:text="@string/commons_agreement_ok"/>
</LinearLayout>