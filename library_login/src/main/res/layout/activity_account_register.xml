<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/base_titlebar" />


    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:divider="@drawable/divider_line_height"
        android:orientation="vertical"
        android:showDividers="middle|end">

        <EditText
            android:id="@+id/mobile_editText"
            style="@style/commons_editTextStyle4"
            android:drawableLeft="@mipmap/icon_mobile"
            android:hint="@string/commons_account_hint1"
            android:inputType="number"
            android:maxLength="11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_item_height"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/password_editText"
                style="@style/commons_editTextStyle3"
                android:drawableLeft="@mipmap/icon_password"
                android:drawablePadding="@dimen/base_item_margin"
                android:hint="@string/commons_password_hint2"
                android:inputType="textPassword"
                android:maxLength="18"
                android:textColor="@color/commons_black" />

            <ImageView
                android:id="@+id/show_password_imageView"
                android:layout_width="@dimen/base_item_height"
                android:layout_height="@dimen/base_item_height"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:src="@mipmap/icon_show_pass_normal" />
        </LinearLayout>

        <EditText
            android:id="@+id/cipher_editText"
            style="@style/commons_editTextStyle4"
            android:drawableLeft="@mipmap/icon_cipher"
            android:hint="@string/commons_cipher_hint"
            android:inputType="text"
            android:maxLength="20"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/mobile_verify_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_item_height"
            android:background="@android:color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/mobile_verify_editText"
                style="@style/commons_editTextStyle3"
                android:drawableLeft="@mipmap/icon_mobile"
                android:drawablePadding="@dimen/base_item_margin"
                android:hint="@string/commons_sms_code_hint"
                android:maxLength="8" />

            <TextView
                android:id="@+id/countdown_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/base_margin_7"
                android:layout_marginRight="@dimen/base_margin_7"
                android:text="60ç§’"
                android:textColor="@color/commons_text_hint_color"
                android:textSize="@dimen/base_textsize_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_item_height"
            android:divider="@drawable/divider_line_width"
            android:orientation="horizontal"
            android:showDividers="middle"
            android:visibility="gone">

            <EditText
                android:id="@+id/verify_editText"
                style="@style/commons_editTextStyle3"
                android:drawableLeft="@mipmap/icon_verify"
                android:hint="@string/commons_verify_hint"
                android:inputType="textEmailSubject"
                android:maxLength="6"
                android:textColor="@color/commons_black" />

            <ImageView
                android:id="@+id/verify_imageView"
                android:layout_width="@dimen/base_margin_100"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/default_img_vify" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/base_margin_10"
        android:layout_marginLeft="@dimen/base_margin_15"
        android:layout_marginTop="@dimen/base_margin_10"
        android:text="@string/commons_account_exists_hint"
        android:textColor="@color/commons_text_normal"
        android:textSize="@dimen/base_textsize_12"
        android:visibility="gone" />

    <Button
        android:id="@+id/register_submit_button"
        style="@style/commons_buttonStyle2"
        android:layout_marginLeft="@dimen/base_margin_42"
        android:layout_marginRight="@dimen/base_margin_42"
        android:text="@string/commons_register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin_10"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/agreement_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/base_margin_10"
            android:text="@string/commons_register_agreement2"
            android:textColor="@color/commons_text_normal"
            android:textSize="@dimen/base_textsize_10" />
    </LinearLayout>
</LinearLayout>
